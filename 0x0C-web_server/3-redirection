#!/usr/bin/env bash
# configure NGIX to redirecting /redirect_me to another page

apt-get -y update
apt-get -y install nginx

mkdir -p /var/www/html
sudo chown -R "$USER":"$USER" /var/www/html
sudo chmod -R 755 /var/www
echo "Hello World!" >> /var/www/html/index.html
sudo service nginx start

path='/etc/nginx/sites-available/default'
string_to_replace='# pass PHP scripts to FastCGI serve'
new_string="server { server_name _; llisten 80; root /var/www/html;\nlocation /redirect_me { return 301 https://example.org; } }"
sed -i "s/$string_to_replace/$new_string/" "$path"

service nginx restart
